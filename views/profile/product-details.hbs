<div class="container-details">

  <div class="image-details">

    <img src="{{this.dbProduct.productPic}}" alt="imagen-producto" width="300px">

  </div>

  <div class="text-details">

    <div class="videogame-details">

      <h3>Detalles del Producto</h3>
      
        <p><strong>Título:</strong> {{this.dbProduct.title}}</p>
        <p><strong>Plataforma:</strong> {{this.dbProduct.platform}}</p>
        <p><strong>Edición:</strong> {{this.dbProduct.edition}}</p>
        <p><strong>Año:</strong> {{this.apiProduct.released}}</p>

        <p><strong>Desarrollador:</strong>
        {{#each this.apiProduct.developers}}
         {{this.name}}, 
         {{/each}}</p>

        <p><strong>Distribuidor:</strong> 
        {{#each this.apiProduct.publishers}}
        {{this.name}}, 
        {{/each}}</p>


        <p><strong>Precio:</strong> {{this.dbProduct.price}}€</p>


        <p><strong>Género:</strong> 
        {{#each this.apiProduct.genres}}
        {{this.name}}, 
        {{/each}}</p>

    </div>

    <div class="button-details">

      <a href="/profile/{{this.dbProduct._id}}/edit">
        <button>Editar</button>
      </a>

    </div>

      <p class="RAWG">Información recibida gracias a <a href="https://rawg.io/apidocs">RAWG</a></p>

  </div>
  
</div>
