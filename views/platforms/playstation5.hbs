<div class="platforms">
  <h3>Productos de Playstation 5</h3>


  {{#if platformGames}}

    {{#each platformGames}}

      {{#if onSale}}

        <div class="platforms-products">

          <p>
            <a href="/product/{{this._id}}"><img src="{{this.productPic}}" alt="imagen-producto" width="300px">
            <p class="platform-titles">{{this.title}}</p>
            </a>
          </p>

        </div>

      {{else}}

      {{/if}}

    {{/each}}

  {{/if}}

</div>

